@*@functions{

    String GetWorkingUrl(string url)
    {
        if (Request.Url.Segments[Request.Url.Segments.Length - 1] == "ViewPdf")
        {
            return url;
        }
        else if (Request.Url.Segments[Request.Url.Segments.Length - 1] == "Pdf" || Request.Url.Segments[Request.Url.Segments.Length - 1] == "Footer")
        {
            String retVal = Server.MapPath(url);
            return retVal;
        }
        else
        {
            return "";
        }
    }
}
<div class="crm-pdf-foot-logo">
    <table style="border-bottom: 1px solid black; width: 100%">
        <tr>
            <td class="section"></td>
            <td style="text-align:right">
                Page <span class="page"></span> of <span class="topage"></span>
            </td>
        </tr>
    </table>
    <img src="@GetWorkingUrl("/Content/img/tieto-logo.png")" alt="tieto-logo" />
    <script>
        function subst() {
            var vars = {};
            var x = document.location.search.substring(1).split('&');
            for (var i in x) { var z = x[i].split('=', 2); vars[z[0]] = unescape(z[1]); }
            var x = ['frompage', 'topage', 'page', 'webpage', 'section', 'subsection', 'subsubsection'];
            for (var i in x) {
                var y = document.getElementsByClassName(x[i]);
                for (var j = 0; j < y.length; ++j) y[j].textContent = vars[x[i]];
            }
        }
        subst();
    </script>
</div>*@