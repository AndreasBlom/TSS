        var uniqueRowNumber = 0;
        var $delBtns;

        $('#discount2').change(function() {
            handleDiscountCheck(this);
        });

        $('#fixed-price2').change(function() {
            handleDiscountCheck(this);
        });

        $('#discount-type2').change(function() {
            handleDiscountTypeCheck();
        });

        $("#none2").change(function() {
            handleDiscountCheck(this);
        });
