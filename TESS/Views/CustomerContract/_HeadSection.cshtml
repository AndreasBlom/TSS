                            <td class="crm-table-title" style="font-weight: bold">Huvudavtal:</td>
                            <td>@ViewBag.CustomerContract.Main_contract_id</td>
                        </tr>
                    }
                    @if (ViewBag.CustomerContract.Is(ContractType.SupplementaryContract))
                    {
