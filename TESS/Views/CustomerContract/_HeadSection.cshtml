                            <td class="crm-table-title" style="font-weight: bold">Avtalsbeteckning:</td>
                            <td>@ViewBag.CustomerContract.Contract_id</td>
                        </tr>
                    }
                    @if (ViewBag.CustomerContract.Is(ContractType.ServiceContract))
                    {
