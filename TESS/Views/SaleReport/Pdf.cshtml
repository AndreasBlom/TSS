@{
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}
@using System.Globalization;
<div class="crm-print-block">
    <table class="table table-striped table-bordered contract-supervision-table">
        <th>Customer</th>
        <th>Title</th>
        <th>Created</th>
        <th>Valid through</th>
        <th style="width: 10em">Maintenance / month</th>
        <th style="width: 10em">License</th>
        <th>Customer Type</th>
        @foreach (Dictionary<String,object> offers in ViewBag.Offers)
        {
            <tr class="">
               @foreach(KeyValuePair<String, object> kp in offers)
               {
                   CultureInfo se = CultureInfo.CreateSpecificCulture("sv-SE");
                   if (kp.Key == "maintenance" || kp.Key == "license")
                   {
                       <td>@String.Format(se, "{0:C2}", kp.Value).Replace(".", " ")</td>
                   }
                   else
                   {
                        <td>@kp.Value</td>
                   }

               }
            </tr>
        }

    </table>
    <div class="form-inline">
        <label style="float:left; margin-right:5%;">Total maintenance: @ViewBag.totalM</label>
        <label style="float:left; margin-right:5%;">Total license: @ViewBag.totalL</label>
    </div>
</div>


