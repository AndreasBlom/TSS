@{
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
    bool showDesc = false;
    int i = 0;
    if (Request.Params["showDesc"] != null) {
        if(Request.Params["showDesc"] == "1"){
            showDesc = true;
        }
    }
}

<div class="crm-print-block">
    @foreach (var module in ViewBag.Modules)
    {
        if (showDesc)
        {
            <h2>@module.Module - @module.Description</h2>
        }
        else
        {
            <h2>@module.Module</h2>
        }
        
        <table class="table table-striped table-bordered contract-supervision-table">
            <th>Customer</th>
            <th>Contract id</th>
            <th style="width: 15em">Module</th>
            <th>Representative</th>
            <th>Classification</th>
            @foreach (Dictionary<String, object> contract in ViewBag.Customermodules[i])
            {
                <tr class="" style="page-break-inside:avoid">
                    @foreach (KeyValuePair<String, object> dic in contract)
                    {
                        <td>@dic.Value</td>
                    }
                </tr>
            }
        </table>
        i++;
    }
</div>


